{% comment %}
  Renders Sort By Drawer ()
  Usage:
  {% render 'sortby'
   "filter_type": "Either drawer or desktop"
   "sort_by_options": collection.sort_options
   %}
{% endcomment %}
<sort-by class="sortby-container {{ filter_type }}">
  {% if filter_type == 'drawer' %}
    <!-- Overlay -->
    <menu-drawer id="mobile-sortby">
      <aside class="filter filter--drawer" data-drawer="content">
        <div class="filter-wrapper filter-wrapper__header">
          <a href="#" id="close-btn" class="button button--black" data-target="mobile-sortby" data-drawer="close">
            <span>Sort Options</span>
            <span>X</span>
          </a>
        </div>
        <div class="filter-wrapper filter-wrapper__content">
          <form>
            <!-- Sort options -->
            <div class="filter-group">
              <ul>
                <li>
                  <div class="checkboxWrapper">
                    <input type="checkbox" id="sort-featured">
                    <div class="checkmark">
                      <span class="icon">{{ 'filter-checkmark.svg' | inline_asset_content }}</span>
                    </div>
                    <label for="sort-featured">Featured</label>
                  </div>
                </li>
                <li>
                  <div class="checkboxWrapper">
                    <input type="checkbox" id="sort-latest">
                    <div class="checkmark">
                      <span class="icon">{{ 'filter-checkmark.svg' | inline_asset_content }}</span>
                    </div>
                    <label for="sort-latest">Latest </label>
                  </div>
                </li>
                <li>
                  <div class="checkboxWrapper">
                    <input type="checkbox" id="sort-lowhigh">
                    <div class="checkmark">
                      <span class="icon">{{ 'filter-checkmark.svg' | inline_asset_content }}</span>
                    </div>
                    <label for="sort-lowhigh">Price: Low to High</label>
                  </div>
                </li>
              </ul>
            </div>
            <div class="horizontal-line"></div>
          </form>
        </div>
        <div class="filter-wrapper filter-wrapper__footer">
          <a href="#" id="close-btn" class="button button--black" data-target="mobile-sortby" data-drawer="close">
            <span>Close</span>
          </a>
        </div>
      </aside>
    </menu-drawer>
  {% endif %}
  {% if filter_type == 'desktop' %}
    <div class="sort-by">
      <label for="sort-by-select" class="sort-by-label">Sort By</label>
      <div class="vert-line"></div>
      <form>
        <select name="sort-by-select" id="sort-by-select" class="sort-by-select">
          {%- for option in sort_by_options -%}
            <option
              value="{{ option.value | escape }}"
              {% if option.value == sort_by %}
                selected="selected"
              {% endif %}
            >
              {{ option.name | escape }}
            </option>
          {%- endfor -%}
        </select>
      </form>
    </div>
  {% endif %}
</sort-by>
