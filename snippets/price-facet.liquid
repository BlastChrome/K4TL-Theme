{% comment %}
  <div class="range">
    <!-- Slider -->
    <div class="range__slider">
      <div class="range__track"></div>
      <input
        class="range__slide-input range__slide-input--min"
        type="range"
        id="min"
        min="0"
        max="{{ filter.range_max | money_without_currency | default: 12000 }}"
        value="{{ filter.min_value.value | money_without_currency | default: 1000 }}"
        name="{{ filter.min_value.param_name }}"
      >
      <input
        class="range__slide-input range__slide-input--max"
        type="range"
        id="max"
        min="0"
        max="{{ filter.range_max | money_without_currency | default: 12000 }}"
        value="{{ filter.max_value.value | money_without_currency | default: 12000 }}"
        name="{{ filter.max_value.param_name }}"
      >
    </div>
    <div class="range__number">
      <div class="input-group">
        <label for="{{ filter.min_value.param_name }}">Min</label>
        <input
          type="text"
          placeholder="0"
          class="min-input"
          name="{{ filter.min_value.param_name }}"
          id="{{ id_prefix }}{{ filter.label | escape }}-LTE"
          value="{{ filter.min_value.value | money_without_currency | default: 1000 }}"
        >
      </div>
      <div class="input-group">
        <label for="{{ filter.max_value.param_name }}">Max</label>
        <input
          type="text"
          class="max-input"
          name="{{ filter.max_value.param_name }}"
          id="{{ id_prefix }}{{ filter.label | escape }}-GTE"
          placeholder="{{ filter.range_max | money_without_currency | default: 12000 }}"
          value="{{ filter.max_value.value | money_without_currency | default: 12000 }}"
        >
      </div>
    </div>
  </div>
{% endcomment %}

<div class="range">
  <!-- Slider -->
  <div class="range__slider">
    <div class="range__track"></div>
    <input
      class="range__slide-input range__slide-input--min"
      type="range"
      id="min"
      min="1000"
      max="12000"
      value="2000"
      name="{{ filter.min_value.param_name }}"
    >
    <input
      class="range__slide-input range__slide-input--max"
      type="range"
      id="max"
      min="1000"
      max="12000"
      value="2000"
      name="{{ filter.max_value.param_name }}"
    >
  </div>
  <div class="range__number">
    <div class="input-group">
      <label for="{{ filter.min_value.param_name }}">Min</label>
      <input
        type="number"
        placeholder="0"
        class="min-input"
        name="{{ filter.min_value.param_name }}"
        id="{{ id_prefix }}{{ filter.label | escape }}-LTE"
        {%- if filter.min_value.value -%}
          value="{{ filter.min_value.value | money_without_currency }}"
        {%- endif -%}
      >
    </div>
    <div class="input-group">
      <label for="{{ filter.max_value.param_name }}">Max</label>
      <input
        type="number"
        class="max-input"
        placeholder="{{ filter.range_max | money_without_currency }}"
        name="{{ filter.max_value.param_name }}"
        id="{{ id_prefix }}{{ filter.label | escape }}-GTE"
        {%- if filter.max_value.value -%}
          value="{{ filter.max_value.value | money_without_currency }}"
        {%- endif -%}
      >
    </div>
  </div>
</div>
